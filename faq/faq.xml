 prefs.set('embed_snippet', document.getElementById('embed_snippet').value); 
 }; pref.onchange = handler; pref.onkeyup = handler; 
 }
 gadgets.util.registerOnLoadHandler(registerHandlers);
</script>
]]>
</Content>
</Module>